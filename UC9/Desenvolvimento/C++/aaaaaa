#include <stdio.h>

int main() {
    float salario_bruto, desconto_transporte, desconto_inss, desconto_fgts, total_descontos, salario_liquido;

    // Recebendo o salário bruto do funcionário
    printf("Digite o salário bruto do funcionário: ");
    scanf("%f", &salario_bruto);

    // Calculando os descontos
    desconto_transporte = salario_bruto * 0.06; // 6% de vale transporte
    desconto_inss = salario_bruto * 0.07;        // 7% de INSS
    desconto_fgts = salario_bruto * 0.08;        // 8% de FGTS

    // Calculando o total de descontos e o salário líquido
    total_descontos = desconto_transporte + desconto_inss + desconto_fgts;
    salario_liquido = salario_bruto - total_descontos;

    // Exibindo os resultados
    printf("Total de descontos: %.2f\n", total_descontos);
    printf("Salário líquido: %.2f\n", salario_liquido);

    return 0;
}

